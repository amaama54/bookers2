<main>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>
      <% @user.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
      <% end %>
    <% end %>
    <h1>User info</h1>
    <%= form_with model:@user, local:true do |f| %>
      <p>Name</p>
      <%= f.text_field :name %>
      <p>Image</p>
      <%= f.attachment_field :profile_image %>
      <p>Introduction</p>
      <%= f.text_field :introduction %>
      <p><%= f.submit "Update User" %></p>
    <% end %>
  </div>
</main>
