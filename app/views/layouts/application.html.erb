<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body>
     
    <script src="jquery.min.js"></script>
    <script src="app.js"></script>
     
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path %>
          <% if user_signed_in? %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                  <li class="nav-link">
                    <i class="fas fa-home"></i>
                    <%= link_to "Home", user_path(current_user.id) %>
                  </li>
                  <li class="nav-link">
                    <i class="fas fa-users"></i>
                    <%= link_to "Users", users_path %>
                  </li>
                  <li class="nav-link">
                    <i class="fas fa-book-open"></i>
                    <%= link_to "Books", books_path %>
                  </li>
                  <li class="nav-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <%= link_to "logout", destroy_user_session_path, method: :delete %>
                  </li>
              </ul>
          <% else %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                  <li class="nav-link">
                    <i class="fas fa-home"></i>
                    <%= link_to "Home", root_path %>
                  </li>
                  <li class="nav-link">
                    <i class="fas fa-link"></i>
                    <%= link_to "About", home_about_path %>
                  </li>
                  <li class="nav-link">
                    <i class="fas fa-user-plus"></i>
                    <%= link_to "sign up", new_user_registration_path %>
                  </li>
                  <li class="nav-link">
                    <i class="fas fa-sign-in-alt"></i>
                    <%= link_to "login", user_session_path %>
                  </li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <% if user_signed_in? %>
      <div class="search">
        <%= form_with url: search_path, method: :get, local: :true do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([["User"], ["Book"]]) %>
          <%= f.select :search, options_for_select([["前方一致","forward_match"], ["後方一致","backward_match"], ["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
      <% end %>
    <%= render "layouts/flash" %>
    <%= yield %>
    
    <fotter>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </fotter>
  </body>
</html>